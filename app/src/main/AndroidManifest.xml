<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rahul.BookHub">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/book_app_icon"
        android:label="Rahul Choudhary"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/book_app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        <activity android:name="com.rahul.bookhub.start.DescriptionActivity"></activity>
        <activity android:name="com.rahul.bookhub.DrawerLayout" />
        <activity android:name="com.rahul.bookhub.start.MainActivity" />
        <activity android:name="com.rahul.bookhub.start.CreateActivity" />

        <activity android:name="com.rahul.bookhub.start.ForgotPassActivity" />
        <activity android:name="com.rahul.bookhub.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>